    def get_fetchdate(self):
        dt_utc = datetime.datetime.utcnow()
        # convert UTC to local hk time - at around HKT 6.00am, all news are available
        dt_local = dt_utc - datetime.timedelta(-2.0/24)
        return dt_local.strftime("%Y%m%d")


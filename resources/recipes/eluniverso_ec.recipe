    __author__            = 'Darko Miletic'
    description           = 'Noticias del Ecuador y el resto del mundo'
    publisher             = 'El Universo'
    category              = 'news, politics, Ecuador'
    oldest_article        = 2
    max_articles_per_feed = 200
    no_stylesheets        = True
    encoding              = 'utf8'

    remove_tags_before = dict(attrs={'id':'FechaPrint'})

    feeds = [
              (u'Portada'          , u'http://www.eluniverso.com/rss/portada.xml'           )
             ,(u'Politica'         , u'http://www.eluniverso.com/rss/politica.xml'          )

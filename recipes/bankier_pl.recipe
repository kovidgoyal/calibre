         ]
    def print_version(self, url):
        segment = url.split('.')
        urlPart = segment[2]
        segments = urlPart.split('-')
        urlPart2 = segments[-1]
        return 'http://www.bankier.pl/wiadomosci/print.html?article_id=' + urlPart2


    remove_tags.append(dict(name = 'img', attrs = {'src' : '/gfx/hd-mid-02.gif'}))
    #remove_tags.append(dict(name = 'a', attrs = {'target' : '_blank'}))
    #remove_tags.append(dict(name = 'br', attrs = {'clear' : 'all'}))


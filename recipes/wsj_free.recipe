def substring_classes(classes):
    q = frozenset(classes.split(' '))

    def matcher(x):
        if x:
            for candidate in frozenset(x.split()):
                for x in q:
                    if x in candidate:
                        return True
        return False
    return {'attrs': {'class': matcher}}



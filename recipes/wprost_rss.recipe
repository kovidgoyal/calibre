    def get_cover_url(self):
        soup = self.index_to_soup('http://www.wprost.pl/tygodnik')
        cover = soup.find(attrs={'class':'wprost-cover'})
        if cover:
            self.cover_url = cover['src']
        return getattr(self, 'cover_url', self.cover_url)

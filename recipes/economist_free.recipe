def classes(classes):
    q = frozenset(classes.split(' '))
    return dict(attrs={
        'class': lambda x: x and frozenset(x.split()).intersection(q)})


class NoArticles(Exception):
    pass


def process_url(url, print_version=True):
    if print_version:
        url += '/print'
    if url.startswith('/'):
        url = 'https://www.economist.com' + url
    return url



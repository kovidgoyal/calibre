    def parse_index(self):
        articles = []
        soup = self.index_to_soup(self.INDEX)
        for feed_link in soup.findAll('div', id='headseccol'):
            a = feed_link.find('a', href=True)
            title = self.tag_to_string(a)
            url = a['href']
            articles.append({
                              'title'      :title
                             ,'date'       :''
                             ,'url'        :url
                             ,'description':''
                            })
        return [('Frontline', articles)]


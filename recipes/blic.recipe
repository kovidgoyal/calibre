    def print_version(self, url):
        return url + '/print'

    def get_cover_url(self):
        soup = self.index_to_soup('http://www.blic.rs/')
        alink = soup.find('a', attrs={'id': 'blic_naslovna_print'})
        if alink:
            return 'http://www.blic.rs' + alink['href']
        return None

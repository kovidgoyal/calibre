    ]

    remove_tags_after = [
        dict(name='div', attrs={'class': ['pub_articol clearfix']})
    ]

    feeds = [
        (u'Feeds', u'http://www.auto-bild.ro/rss/toate')
    ]

    def preprocess_html(self, soup):
        return self.adeify_images(soup)

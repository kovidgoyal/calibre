    def preprocess_html(self, soup):
        for item in soup.findAll(style=True):
            del item['style']
        for item in soup.findAll('left'):
            item.name='span'
        for item in soup.findAll('a'):
            if item.string is not None:
               str = item.string
               item.replaceWith(str)
            else:
               str = self.tag_to_string(item)
               item.replaceWith(str)
        return soup

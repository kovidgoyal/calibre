"""www.dunyahalleri.com"""
import locale
import os
import re
import time

from shutil import copyfile

from calibre.ebooks.BeautifulSoup import Tag
from calibre.web.feeds.recipes import BasicNewsRecipe
from PIL import Image, ImageDraw, ImageFont


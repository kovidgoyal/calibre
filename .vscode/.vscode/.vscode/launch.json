            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "üîÑ E-book Converter",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/calibre/debug.py",
            "args": [
                "-c",
                "from calibre.ebooks.conversion.cli import main; main()"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "üìö Library Management",
            "type": "debugpy",
            "request": "launch",

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ Calibre Main",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/calibre/debug.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "CALIBRE_DEVELOP_FROM": "${workspaceFolder}/src"
            }
        },
        {
            "name": "üìñ E-book Viewer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/calibre/debug.py",
            "args": [
                "-w",
                "ebook-viewer"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "üìñ E-book Viewer (Open File)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/calibre/debug.py",
            "args": [
                "-w",
                "ebook-viewer",

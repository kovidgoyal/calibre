{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üöÄ Run Calibre",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "src/calibre/debug.py"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "üîç Run Calibre (Verbose)",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "src/calibre/debug.py",
                "-v"
            ],
            "problemMatcher": []
        },
        {
            "label": "üß™ Run All Tests",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "setup.py",
                "test"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "üß™ Run Tests with Coverage",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pytest",
                "--cov=src/calibre",
                "--cov-report=html",
                "--cov-report=term"
            ],
            "problemMatcher": []
        },
        {
            "label": "üß™ Run Single Test File",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pytest",
                "${file}",
                "-v"
            ],
            "problemMatcher": []
        },
        {
            "label": "üî® Build Calibre",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "setup.py",
                "build"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "üî® Clean Build",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "setup.py",
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "üî® Full Rebuild",
            "type": "shell",
            "dependsOn": [
                "üî® Clean Build",
                "üî® Build Calibre"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "üì¶ Install Development Mode",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "setup.py",
                "develop"
            ],
            "problemMatcher": []
        },
        {
            "label": "üîç Lint with Pylint",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pylint",
                "${file}"
            ],
            "problemMatcher": []
        },
        {
            "label": "üîç Lint with Flake8",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "flake8",
                "${file}"
            ],
            "problemMatcher": []
        },
        {
            "label": "üîç Type Check with MyPy",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "mypy",
                "${file}"
            ],
            "problemMatcher": []
        },
        {
            "label": "‚ú® Format with Black",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "black",
                "${file}"
            ],
            "problemMatcher": []
        },
        {
            "label": "‚ú® Sort Imports",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "isort",
                "${file}"
            ],
            "problemMatcher": []
        },
        {
            "label": "‚ú® Format & Lint Current File",
            "dependsOn": [
                "‚ú® Format with Black",
                "‚ú® Sort Imports",
                "üîç Lint with Flake8"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "üìä Generate Documentation",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pydoc",
                "-b"
            ],
            "problemMatcher": []
        },
        {
            "label": "üßπ Clean Python Cache",
            "type": "shell",
            "command": "find . -type d -name '__pycache__' -exec rm -rf {} + && find . -type f -name '*.pyc' -delete",
            "windows": {
                "command": "Get-ChildItem -Path . -Include __pycache__ -Recurse -Force | Remove-Item -Force -Recurse; Get-ChildItem -Path . -Filter *.pyc -Recurse -Force | Remove-Item -Force"
            },
            "problemMatcher": []
        },
        {
            "label": "üì¶ Update Dependencies",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "--upgrade",
                "-r",
                "requirements.txt"
            ],
            "problemMatcher": []
        },
        {
            "label": "üì¶ List Installed Packages",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pip",
                "list"
            ],
            "problemMatcher": []
        },
        {
            "label": "üîÑ Git Pull & Update",
            "type": "shell",
            "command": "git pull && ${config:python.defaultInterpreterPath} -m pip install --upgrade -r requirements.txt",
            "problemMatcher": []
        }
    ]
}
